{
    "name": "densenet121",
    "n_gpu": 1,
    
    "arch": {
        "type": "densenet121",
        "args": {"n_class": 16,
				"img_size": [256, 256],
				"pretrained": false,
				"pretrained_path": "./pretrained"
				}
    },
    "data_loader": {
        "type": "AutoDataLoader",
        "args":{
            "data_dir": "data/cls",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 4,
	        "transform": null

        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0003,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cls_loss",
    "metrics": [
        "accuracy",
		"topK_accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 20,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
		"verbose_per_epoch": 50,
        
        "monitor": "max val_accuracy",
        "early_stop": 10,
        
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
