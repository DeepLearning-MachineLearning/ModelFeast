{
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "gamma": 0.2,
            "step_size": 50
        }
    },
    "name": "xception",
    "loss": "cls_loss",
    "data_loader": {
        "type": "AutoDataLoader",
        "args": {
            "shuffle": true,
            "transform": [
                200,
                200
            ],
            "data_dir": "E:/Oxford_Flowers17/train",
            "validation_split": 0.2,
            "batch_size": 64
        }
    },
    "n_gpu": 1,
    "trainer": {
        "early_stop": 10,
        "monitor": "max val_accuracy",
        "log_dir": "saved/runs",
        "save_dir": "saved/",
        "tensorboardX": false,
        "steps_update": 1,
        "verbosity": 2,
        "epochs": 50,
        "verbose_per_epoch": 100,
        "save_period": 2
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.0003,
            "weight_decay": 3e-05
        }
    },
    "metrics": [
        "accuracy"
    ],
    "arch": {
        "type": "xception",
        "args": {
            "n_class": 17,
            "pretrained_path": "./pretrained/",
            "pretrained": false,
            "img_size": [
                200,
                200
            ]
        }
    }
}