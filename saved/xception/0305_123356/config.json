{
    "loss": "cls_loss",
    "optimizer": {
        "args": {
            "lr": 0.0003,
            "weight_decay": 3e-05
        },
        "type": "Adam"
    },
    "n_gpu": 1,
    "data_loader": {
        "args": {
            "validation_split": 0.2,
            "transform": [
                200,
                200
            ],
            "shuffle": true,
            "batch_size": 64,
            "data_dir": "E:/Oxford_Flowers17/train"
        },
        "type": "AutoDataLoader"
    },
    "trainer": {
        "log_dir": "saved/runs",
        "early_stop": 10,
        "steps_update": 1,
        "tensorboardX": false,
        "save_period": 2,
        "epochs": 50,
        "save_dir": "saved/",
        "verbosity": 2,
        "verbose_per_epoch": 100,
        "monitor": "max val_accuracy"
    },
    "name": "xception",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "args": {
            "step_size": 50,
            "gamma": 0.2
        },
        "type": "StepLR"
    },
    "arch": {
        "args": {
            "n_class": 17,
            "pretrained_path": "./pretrained/",
            "pretrained": false,
            "img_size": [
                200,
                200
            ]
        },
        "type": "xception"
    }
}