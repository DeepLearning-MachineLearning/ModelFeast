{
    "name": "DenseNet",
    "arch": {
        "args": {
            "n_class": 2,
            "img_size": 256
        },
        "type": "DenseNet"
    },
    "n_gpu": 1,
    "optimizer": {
        "args": {
            "weight_decay": 0.0003,
            "lr": 0.0001
        },
        "type": "Adam"
    },
    "metrics": [
        "accuracy"
    ],
    "trainer": {
        "steps_update": 2,
        "log_dir": "saved/runs",
        "monitor": "max val_accuracy",
        "verbosity": 2,
        "save_dir": "saved/",
        "tensorboardX": true,
        "early_stop": 4,
        "epochs": 12,
        "save_period": 1,
        "verbose_per_epoch": 20
    },
    "lr_scheduler": {
        "args": {
            "step_size": 50,
            "gamma": 0.2
        },
        "type": "StepLR"
    },
    "loss": "cls_loss"
}